<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wishlist_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:scaleType="fitXY" />


    <TextView
        android:id="@+id/wishlist_title"
        style="@style/product_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/wishlist_img"
        android:layout_toRightOf="@+id/wishlist_img"
        android:padding="5dp"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/wishlist_r_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wishlist_title"
        android:layout_toEndOf="@+id/wishlist_img"
        android:layout_toRightOf="@+id/wishlist_img"
        android:text="00.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wishlist_special_price"
        style="@style/product_price_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wishlist_r_price"
        android:layout_toEndOf="@+id/wishlist_img"
        android:layout_toRightOf="@+id/wishlist_img"
        android:paddingTop="5dp"

        android:text="00.00"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/wish_list_dlt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="2dp"
        android:src="@drawable/dlt_icon" />


</RelativeLayout>