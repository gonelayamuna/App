    <View
        android:id="@+id/viewline2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/table"
        android:layout_marginTop="9dp"
        android:background="#EDADE8" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="2sp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="560034"
        android:id="@+id/pinnumbertext"
        android:layout_below="@+id/viewline2"
        android:textStyle="normal"
        android:textColor="#000000"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        />


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Update Cart"
        android:id="@+id/updatecartbutton"
        android:textColor="#FFFFFF"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/pinnumbertext"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textStyle="bold"
        android:background="#CF0A8B"
        android:visibility="gone"


        />

