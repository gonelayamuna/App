    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_marginTop="1dp"
        android:stretchColumns="*"
        android:layout_below="@+id/itemimg"
      android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"


       >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceval"
                android:text="599.99"
                android:textColor="#515151"
                android:textStyle="normal"
                android:layout_marginLeft="7dp"
                android:textAppearance="?android:attr/textAppearanceSmall" />



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/minusimgview"
                android:layout_marginTop="3dp"
                android:src="@drawable/blacknew24"

                />

            <EditText
                android:layout_width="8dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:text=""
                android:layout_marginTop="3dp"
                android:textSize="15dp"
                android:textColor="#000000"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:singleLine="true"
                android:background="@drawable/shape"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/plusimgview"
                android:src="@drawable/blacknew24plus"
                android:layout_marginTop="3dp"

                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtotalval"
                android:text="100.99"
                android:textColor="#CF0A8B"
                android:layout_marginTop="4dp"
                android:textStyle="normal"
                android:textAppearance="?android:attr/textAppearanceMedium" />

           <!-- <ImageView
