<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#f6f6f6">


    <RelativeLayout
        android:id="@+id/relativehead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="..."
        android:ellipsize="end"
        android:singleLine="true"
        android:maxEms="15"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/imagenametext"
        android:textStyle="normal"
        android:textColor="#515151"

        />

    <ImageView
        android:id="@+id/revieworderimg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
      android:layout_marginTop="8dp"
        android:padding="5dp"
        />


    <TableLayout
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/imagenametext"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/priceval"
                android:text="Qty:"
                android:textColor="#515151"
                android:layout_marginLeft="20dp"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/qtyedittext"
                android:text=""
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000000"

                android:ems="1"
                android:inputType="number"
                android:singleLine="true"
                android:enabled="false"
                android:background="@drawable/shape"
                android:textAppearance="?android:attr/textAppearanceLarge" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subtotalvallist"
                android:text="100.99"
                android:textColor="#CF0A8B"
                android:textStyle="normal"
                android:layout_marginLeft="50dp"

                android:textAppearance="?android:attr/textAppearanceMedium" />




        </TableRow>

    </TableLayout>

    </RelativeLayout>

    <View
        android:id="@+id/viewline2"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/relativehead"
        android:layout_marginTop="1dp"
        android:background="#515151" />




</RelativeLayout>

