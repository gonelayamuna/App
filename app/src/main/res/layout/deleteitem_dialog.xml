<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    >


    <RelativeLayout
        android:id="@+id/deleteitemrelative"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffffff"
        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
           android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Are you sure to delete the item.?"
            android:textStyle="bold"
            android:id="@+id/suretodelete"
            />

        <Button
            android:id="@+id/okaybtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="OK"
           android:layout_toLeftOf="@+id/cancelbtn"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:background="#CF0A8B"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/suretodelete"

            />

        <Button
            android:id="@+id/cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:background="#CF0A8B"
            android:layout_alignTop="@+id/okaybtn"
            android:layout_alignRight="@+id/suretodelete"
            android:layout_alignEnd="@+id/suretodelete" />




    </RelativeLayout>

</RelativeLayout>