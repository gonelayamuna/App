    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailedttxtcntctus"

        android:layout_below="@+id/textView21"
        android:layout_alignRight="@+id/nameedttxt"
        android:layout_alignEnd="@+id/nameedttxt"
        android:layout_alignLeft="@+id/textView21"
        android:layout_alignStart="@+id/textView21" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Telephone"
        android:layout_marginTop="15dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_below="@+id/emailedttxtcntctus"
        android:layout_alignLeft="@+id/emailedttxtcntctus"
        android:layout_alignStart="@+id/emailedttxtcntctus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/telephoneedttxt"
        android:inputType="number"
       android:maxLength="10"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/emailedttxtcntctus"
        android:layout_alignEnd="@+id/emailedttxtcntctus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Comment"
        android:layout_marginTop="15dp"
        android:textStyle="normal"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_below="@+id/telephoneedttxt"
        android:layout_alignLeft="@+id/telephoneedttxt"
        android:layout_alignStart="@+id/telephoneedttxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentedttxt"

        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_alignRight="@+id/telephoneedttxt"
        android:layout_alignEnd="@+id/telephoneedttxt" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="SUBMIT"
            android:background="#CF0A8B"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:id="@+id/button"
            android:layout_below="@+id/commentedttxt"


            android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
