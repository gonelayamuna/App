<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    >


    <RelativeLayout
        android:id="@+id/loginrelative"
        android:layout_width="match_parent"
        android:layout_height="280dp"

        android:background="#ffffff"

        android:layout_centerInParent="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_forgotpwddialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="17dp"
            android:layout_marginRight="25dp"

            android:background="@drawable/closebtn20"
            />

        <TextView
            android:id="@+id/textdialog"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your email address below. You will receive a link to reset your password."
            android:layout_below="@+id/cancel_forgotpwddialog"
            android:layout_marginTop="15dp"

            android:layout_alignLeft="@+id/textinputemail"
            android:textStyle="bold"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_below="@+id/textdialog"
            android:id="@+id/textinputemail"
            android:layout_width="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"

            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"


            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/secdiaemailedittxt"
                android:hint="Email Address"
                android:padding="10dp"
                android:singleLine="true"
                />

        </android.support.design.widget.TextInputLayout>



        <TextView
            android:id="@+id/backtologin"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back to login"
            android:layout_below="@+id/textinputemail"
            android:layout_marginTop="30dp"

            android:layout_alignLeft="@+id/textinputemail"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/submit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

         android:layout_toRightOf="@+id/backtologin"
            android:layout_alignBaseline="@+id/backtologin"
            android:layout_marginLeft="50dp"

            android:background="#CF0A8B"
            android:layout_marginTop="12dp"
            android:textColor="#ffffff"
            android:textStyle="bold"

            android:text="SUBMIT" />


    </RelativeLayout>

</RelativeLayout>